{
  "compilerOptions": {
    "target": "es6",
    "module": "commonJS",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*",
    "node_modules/@types/**/*",
    "node_modules/three/**/*",
  ],
  "path": {
    "@/*": ["./src/*"]
  }
}